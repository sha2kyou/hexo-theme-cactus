.post-list
  padding: 0

  .post-item
    margin-bottom: 0rem
    margin-left: 0
    list-style-type: none

    .meta
      display: block
      margin-right: 8px
      min-width: 75px
      color: $color-meta
      font-size: $font-size

  .post-item-content
    font-size: 0.85em

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 5px

      .meta
        text-align: left

