// Fonts
$font-family-body = "Songti SC", "STSong", "SimSun", "宋体", "Noto Serif CJK SC", "WenQuanYi Zen Hei", serif
//$font-family-body = "PingFang SC", "Microsoft YaHei", "SimHei", "Helvetica Neue", "Helvetica", "Arial", sans-serif
$font-family-mono = "Menlo", "Meslo LG", monospace
$font-size = 14px
$line-height = 1.8
$page-width = 0rem + (hexo-config("page_width") || 39)
// Logo
$logo-width = 0px + (hexo-config("logo.width") || 0)
