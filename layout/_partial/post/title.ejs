<% if (index) { %>
    <% if (post.link) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url">
            <%= post.title %><% if (theme.post_emoji_mark == true && (post.continuous_update == true || post.write_it_later == true || post.series || post.date.isBefore(moment().subtract(theme.post_outdated.days,'d')))) { %>
                (
                    <% if (post.series) { %>🧾<% } %>
                    <% if (post.continuous_update == true) { %>📹<% } %>
                    <% if (post.write_it_later == true) { %>🐦<% } %>
                    <% if (post.date.isBefore(moment().subtract(theme.post_outdated.days,'d'))) { %>🕙<% } %>
                )
                <% } %>
        </a>
    <% } else if (post.title) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>">
            <%= post.title %><% if (theme.post_emoji_mark == true && (post.continuous_update == true || post.write_it_later == true || post.series || post.date.isBefore(moment().subtract(theme.post_outdated.days,'d')))) { %>
                (
                    <% if (post.series) { %>🧾<% } %>
                    <% if (post.continuous_update == true) { %>📹<% } %>
                    <% if (post.write_it_later == true) { %>🐦<% } %>
                    <% if (post.date.isBefore(moment().subtract(theme.post_outdated.days,'d'))) { %>🕙<% } %>
                )
                <% } %>
        </a>
    <% } else { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>">Untitled</a>
    <% } %>
<% } else { %>
    <h1 class="<%= class_name %>" itemprop="name headline">
        <%= post.title %>
    </h1>
<% } %>

