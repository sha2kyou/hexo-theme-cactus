<section id="wordcount">
    <% if (config.symbols_count_time) { %>
          <div class="wordcount-total_symbols">
            <% if (config.symbols_count_time.total_symbols) { %>
              <span><%= __('wordcount.total_symbols') %></span>
              <span><%= symbolsCountTotal(site) %></span>
            <% } %>
            |
            <% if (config.symbols_count_time.total_time) { %>
              <span><%= __('wordcount.total_time') %></span>
              <span><%= symbolsTimeTotal(site) %></span>
            <% } %>
          </div>
    <% } %>
</section>

<section id="about">
    <% if (config.description) { %>
        <!-- <span class="h1"><%= __('index.description') %></span> -->
        <%- markdown(config.description) %>
    <% } %>
</section>

<section id="writing">
    <span class="h1"><a href="<%- url_for("archives") %>"><%= __('index.articles') %></a></span>
    <% if (theme.tags_overview && site.tags.length) { %>
        <span class="h2"><%= __('index.topics') %></span>
        <span class="widget tagcloud">
    <%- tagcloud(theme.tags_overview) %>
  </span>
        <span class="h2"><%= __('index.most_recent') %></span>
    <% } %>
    <ul class="post-list">
        <% var field_sort = theme.posts_overview.sort_updated ? 'updated' : 'date' %>
        <% if (theme.posts_overview.show_all_posts) { %>
            <% var show_posts = page.posts.sort(field_sort, 'desc') %>
        <% } else { %>
            <% var show_posts = site.posts.sort(field_sort, 'desc').limit(theme.posts_overview.post_count || 5) %>
        <% } %>
        <% show_posts.each(function(post, i){ %>
            <li class="post-item">
                <%- partial('_partial/post/date', {post: post, class_name: 'meta'}) %>
                <span><%- partial('_partial/post/title', {post: post, index: true, class_name: ''}) %></span>
            </li>
            <% if (theme.show_post_excerpt) { %>
                <li class="post-item">
                    <div class="meta"></div>
                    <div class="post-item-content"><%- strip_html(truncate(post.excerpt, {length: 250})) %></div>
                </li>
            <% } %>
        <% }); %>
    </ul>
    <% if (theme.posts_overview.show_all_posts) { %>
        <%- partial('_partial/pagination') %>
    <% } %>
</section>

<% if (site.data.projects) { %>
    <% if(theme.projects.post == true){ %>
        <section id="projects">
            <span class="h1"><%= __('index.projects') %></span>
            <ul class="post-list">
                <% for(var obj in site.data.projects){ %>
                    <% if(obj < theme.projects.post_count){ %>
                        <li class="post-item">
                            <div class="meta"><%= site.data.projects[obj].date %></div>
                            <span><%= site.data.projects[obj].name %></span>
                        </li>
                    <% } %>
                <% } %>
            </ul>
        </section>
    <% } %>
<% } %>